pipeline {
    agent any

    stages {
        
        stage('Get Code') {
            steps {
                // Obtener cÃ³digo del repo
                sh 'whoami'
                sh 'hostname'
                git branch: 'develop',
                    url: 'https://github.com/fgrubio/CasoPractico-1.4.git'
                stash name:'code', includes:'**'
            }
        }
        
        stage('Static Test') {
            agent {label 'agente2'}
            steps{
                unstash name:'code'
                sh 'whoami'
                sh 'hostname'
                sh '''
                    set PYTHONPATH=%WORKSPACE%
                    flake8 --exit-zero --format=pylint src >flake8.out
                    bandit --exit-zero -r "src/" -f custom -o bandit.out --msg-template "{abspath}:{line}: [{test_id}] {msg}"
                '''
                recordIssues sourceCodeRetention: 'LAST_BUILD', tools: [flake8(name: 'Flake8', pattern: 'flake8.out')]
                recordIssues sourceCodeRetention: 'LAST_BUILD', tools: [pyLint(name: 'Bandit', pattern: 'bandit.out')]
            }
        }
        
        stage('Deploy') {
            steps{
                unstash name:'code'
                sh 'whoami'
                sh 'hostname'
                sh'''
                    sam build
                    sam deploy --config-env "staging" --no-fail-on-empty-changeset
                '''
                
                script {
                    def BASE_URL = sh( script: "aws cloudformation describe-stacks --stack-name staging-todo-list-aws --query 'Stacks[0].Outputs[?OutputKey==`BaseUrlApi`].OutputValue' --region us-east-1 --output text", 
                    returnStdout: true)
                    writeFile file: 'base_url.txt', text: BASE_URL
                }
                
                stash name: 'base-url-stash', includes: 'base_url.txt'
                
            }
        }
        
        stage('Rest Test') {
            agent {label 'agente2'}
            steps{
                unstash name:'code'
                unstash name:'base-url-stash'
                sh 'whoami'
                sh 'hostname'
                script {
                    def BASE_URL = readFile('base_url.txt').trim()
                    echo "$BASE_URL"
                    sh """
                        export BASE_URL=${BASE_URL}
                        pytest --junitxml=result-rest.xml test/integration/todoApiTest.py
                    """
                    junit healthScaleFactor: 0.0, testResults: 'result-rest.xml'
                }
            }
        }
        
        stage ('Promote') {
            steps{
                unstash name:'code'
                sh 'whoami'
                sh 'hostname'
                sh '''
                    git fetch origin

                    git checkout master
                    git reset --hard origin/master
                    git config merge.ours.driver true
                    git merge --no-ff origin/develop -m "Hacemos el merge de develop en master"

                '''
                withCredentials([gitUsernamePassword(credentialsId:'jenkins-github')]){
                    sh '''    
                        git push origin master
                    '''
                } 
            }
        }
    }
}
