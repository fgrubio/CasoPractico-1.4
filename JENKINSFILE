pipeline {
    agent any

    stages {
        
        stage('Get Code') {
            steps {
                // Obtener cÃ³digo del repo
                git branch: 'develop',
                    url: 'https://github.com/fgrubio/CasoPractico-1.4.git'
            }
        }
        
        stage('Static Test') {
            steps{
                sh '''
                    set PYTHONPATH=%WORKSPACE%
                    flake8 --exit-zero --format=pylint src >flake8.out
                    bandit --exit-zero -r "src/" -f custom -o bandit.out --msg-template "{abspath}:{line}: [{test_id}] {msg}"
                '''
                recordIssues sourceCodeRetention: 'LAST_BUILD', tools: [flake8(name: 'Flake8', pattern: 'flake8.out')]
                recordIssues sourceCodeRetention: 'LAST_BUILD', tools: [pyLint(name: 'Bandit', pattern: 'bandit.out')]
            }
        }
        
        stage('Deploy') {
            steps{
                sh'''
                    sam build
                    sam deploy --config-env "staging" --no-fail-on-empty-changeset
                '''
            }
        }
        
        stage('Rest Test') {
            steps{
                script {
                    def BASE_URL = sh( script: "aws cloudformation describe-stacks --stack-name staging-todo-list-aws --query 'Stacks[0].Outputs[?OutputKey==`BaseUrlApi`].OutputValue' --region us-east-1 --output text",
                        returnStdout: true)
                    echo "$BASE_URL"
                    sh """
                        export BASE_URL=${BASE_URL}
                        pytest test/integration/todoApiTest.py
                    """
                }
            }
        }
        
        stage ('Promote') {
            steps{
                sh '''
                        git fetch origin

                        git checkout master
                        git reset --hard origin/master
                        git merge --no-ff origin/develop -m "Hacemos el merge de develop en master"

                '''
                withCredentials([gitUsernamePassword(credentialsId:jenkins-github)]){
                    sh '''    
                        git push origin master
                    '''
                } 
            }
        }
    }
}
